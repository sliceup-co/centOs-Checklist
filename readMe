TYPE="Ethernet"
PROXY_METHOD="none"
BROWSER_ONLY="no"
NAME="eth0"
DEVICE="eth0"
ONBOOT="yes"
TYPE=Ethernet

# Static IP Address #
BOOTPROTO=static
# Server IP #
IPADDR=10.12.2.22x
# Netmask #
NETMASK=255.255.255.0
# Default Gateway IP #
GATEWAY=10.12.2.1
# DNS Servers #
DNS1=8.8.8.8
DEFROUTE=yes
IPV4_FAILURE_FATAL=no
# Disable ipv6 #
IPV6INIT=no

